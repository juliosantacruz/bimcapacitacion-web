---
import { Image } from "astro:assets";
import LogoTransparente from "../assets/img/1Logo-BIM-Capacitacion-transparente.png";

---

<section class='CourseList'>
  <div class="seccion-listado">
    <div class=" listado-cursos" data-aos="fade-up">
      <h2>
         Cursos Presenciales Revit
      </h2>
      <ul>
        <li>
          <a href="#">✅ Curso Revit Basico </a>
        </li>
        <li>
          <a href="#">✅ Curso Revit Arquitectonico</a>
        </li>
        <li>
          <a href="#">✅ Curso Revit Estructural</a>
        </li>
        <li>
          <a href="#">✅ Curso Revit MEP</a>
        </li>
        <li>
          <a href="#">✅ Curso Navisworks Basico</a>
        </li>
        <li>
          <a href="#">✅ Curso Revit + Navisworks</a>
        </li>
      </ul>
    </div>
    <div class="listado-cursos-img">
      <Image src={LogoTransparente} alt="" width={500}  height={300}/>
    </div>
  </div>
</section>


<style>
  .CourseList{
    width: 100%;
  max-width: 2000px;
  background-color: #efefef;
}

  .seccion-listado {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-bottom: 50px;
  }

  .listado-cursos {
    width: 100%;
  }

  .listado-cursos li {
    font-size: 20px;
    margin: 20px 30px;
    list-style: none;
  }

  .listado-cursos-img {
    width: 100%;
    margin: 50px 0;
  }

  .listado-cursos-img img {
    width: 100%;
    height:auto;
    object-fit: cover;
  }

  @media screen and (min-width: 800px) {
    .seccion-listado {
      flex-direction: row;
    }
    .listado-cursos-img img {
    max-width: 500px;

  }
  }
</style>
