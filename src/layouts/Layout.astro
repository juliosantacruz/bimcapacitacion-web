---
import BaseHead from './BaseHead.astro';
import Footer from './Footer.astro';
import Navbar from '../components/react/Navbar';
import { ClientRouter } from 'astro:transitions';
import '../styles/variables.css';
import '../styles/components.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "BIM Capacitación - Aprende Revit y tecnologías BIM con expertos certificados" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} description={description}/>
    <ClientRouter />
  </head>
  <body>
    <Navbar client:load />
    <main>
      <slot />
    </main>
    <Footer />
    
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
    
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    
      window.localStorage.setItem('theme', theme);
    </script>
  </body>
</html>

<style is:global>
  :root {
    --global-padding: 0 100px;

    @media screen and (max-width:1400px){
    --global-padding: 0 100px;
    }
    @media screen and (max-width:1200px){
    --global-padding: 0 80px;
    }
    @media screen and (max-width:992px){
    --global-padding: 0 60px;
    }

    @media screen and (max-width:768px){
    --global-padding: 0 40px;
    }
    @media screen and (max-width:576px){
    --global-padding: 0 20px;
    }

  }
  html {
    font-family: 'Inter', system-ui, sans-serif;
    scroll-behavior: smooth;

  }
  body{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  main {
    min-height: calc(100vh - var(--header-height));
  }

  .pageTitle{
    width: 100%;
    display: flex;
    justify-content: center;
    margin: 0 auto;
  }
</style>
