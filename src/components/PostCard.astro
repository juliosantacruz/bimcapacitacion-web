---
import { Image } from "astro:assets";
// import carTest from "../assets/img/COMO DESCARGAR E INSTALAR REVIT 2020.jpg"
const {data} = Astro.props
---

<a href="#" class="CardPost">
  <article >
    <div class="headerContent">
      <h3>{data.title.toUpperCase()}</h3>
    </div>
    <div class="cardContent">
      <div class="tarjeta-texto">
        <p>
          {data.overview}
        </p>
      </div>
      <div class="tarjeta-img">
        <Image
          src={data.thumbnail}
          width={200}
          height={120}
          alt=""
        />
      </div>
    </div>
    <div class="cardFooter">
      <div class="tarjeta-categorias">
        <b>tag - tag - tag</b>
      </div>
    </div>
  </article>
</a>

<style>
  .CardPost{
    width: 90%;
    height: 100%;

    max-width: 600px;
    border: 1px solid black;
    text-decoration: none;
    padding: 25px;
    border-radius: 25px;

    box-shadow: 4px 4px 7px 0px black;
  }
  .CardPost:hover{
    transform: translateY(2px);
    box-shadow: 2px 2px 2px 0px black;

  }
  .headerContent{
    width: 100%;
    h3{
      font-size: 30px;
      margin: 0 0 10px 0;
      text-align: center;
    }
  }

  .cardContent{
    display: flex;

    .tarjeta-texto{
    width: 60%;

    }

    .tarjeta-img{
      height: auto;
      width: 40%;

      img{
        width: 100%;
        height: 100%;
      }
    }
  }

  .cardFooter{
    text-align: center;
  }
  @media screen and (max-width: 576px) {
    .cardContent{
      flex-direction: column;

      .tarjeta-texto{
    width: 100%;

    }

    .tarjeta-img{
      height: auto;
      width: 100%;

      img{
        width: 100%;
        height: 100%;
      }
    }
    }
  }

</style>
