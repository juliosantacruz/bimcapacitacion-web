<style>
  .CardPost{
    width: 90%;
    height: 100%;

    max-width: 600px;
    border: 1px solid black;
    text-decoration: none;
    padding: 25px;
    border-radius: 25px;
  }
  .headerContent{
    width: 100%;
    h3{
      font-size: 30px;
      margin: 0 0 10px 0;
      text-align: center;
    }
  }

  .cardContent{
    display: flex;

    .tarjeta-img{
      height: 100px;

      img{
        width: 100%;
        height: 100%;
      }
    }
  }

  .cardFooter{
    text-align: center;
  }
  @media screen and (max-width: 576px) {
    .cardContent{
      flex-direction: column;
    }
  }

</style>
