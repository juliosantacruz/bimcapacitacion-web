---
import { Image } from "astro:assets";
// import carTest from "../assets/img/COMO DESCARGAR E INSTALAR REVIT 2020.jpg"
const { dataCard } = Astro.props;
const { data } = dataCard;
---

<a href={`${dataCard.collection}/${dataCard.slug}`} class="CardPost">
  <article>
    <div class="tarjeta-img">
      <Image src={data.image} width={340} height={240} alt="" />
    </div>
    <div class="headerContent">
      <h4>{data.title.toUpperCase()}</h4>
    </div>
  </article>
</a>

<style>
  .CardPost {
    width: 300px;
    height: 100%;
    min-height: 260px;

    max-width: 400px;
    /* border: 1px solid black; */
    text-decoration: none;
    /* padding: 15px; */
    /* border-radius: 5px; */

    /* box-shadow: 4px 4px 7px 0px black; */
    box-shadow: 0px 0px 10px 0px black;
  }
  .CardPost:hover {
    transform: translateY(2px);
    box-shadow: 2px 2px 6px 0px black;
  }
  .headerContent {
    width: 100%;
    h4 {
      font-size: 20px;
      margin: 0 0 10px 0;
      text-align: center;
    }
  }

  .tarjeta-img {
    height: auto;
    width: 100%;

    img {
      width: 100%;
      height: auto;
    }
  }


  .cardFooter {
    text-align: center;
  }
  @media screen and (max-width: 576px) {
    .cardContent {
      flex-direction: column;

      .tarjeta-texto {
        width: 100%;
      }

      .tarjeta-img {
        height: auto;
        width: 100%;

        img {
          width: 100%;
          height: 100%;
        }
      }
    }
  }
</style>
