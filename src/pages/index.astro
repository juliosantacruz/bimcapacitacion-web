<style>
  main {
    padding-top: var(--header-height);
  }

  .bento-section {
    padding: 5rem 0;
    background: var(--bg-secondary);
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .section-subtitle {
    text-align: center;
    color: var(--text-secondary);
    margin-bottom: 3rem;
    font-size: 1.125rem;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 200px);
    gap: 1.5rem;
  }

  .bento-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    transition: all var(--transition-base);
    cursor: pointer;
  }

  .bento-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
  }

  .bento-card.large {
    grid-column: span 2;
    grid-row: span 2;
  }

  .bento-card.wide {
    grid-column: span 2;
  }

  .bento-icon {
    font-size: 2.5rem;
  }

  .bento-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .bento-card p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  @media (max-width: 1024px) {
    .bento-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto;
    }

    .bento-card.large,
    .bento-card.wide {
      grid-column: span 2;
    }
  }

  @media (max-width: 640px) {
    .bento-grid {
      grid-template-columns: 1fr;
    }

    .bento-card.large,
    .bento-card.wide {
      grid-column: span 1;
    }
  }
</style>
