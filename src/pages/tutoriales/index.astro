---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import TutorialGrid from "../../components/react/TutorialGrid";

const tutorialesEntries = await getCollection("tutoriales");

const tutorials = tutorialesEntries.map((tutorial) => ({
  slug: tutorial.slug,
  title: tutorial.data.title,
  image: tutorial.data.image,
  imageAlt: tutorial.data.imageAlt,
  YTVideo: tutorial.data.YTVideo,
}));
---

<Layout title="Tutoriales - BIM Capacitación" description="Aprende Revit con nuestros tutoriales en video">
  <main>
    <section class="tutorials-hero">
      <div class="container">
        <h1>Aprende con <span class="text-gradient">Tutoriales</span></h1>
        <p class="hero-subtitle">
          Explora nuestra colección de tutoriales en video y mejora tus habilidades en Revit y BIM
        </p>
      </div>
    </section>

    <section class="tutorials-section">
      <div class="container">
        <TutorialGrid client:load tutorials={tutorials} />
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    padding-top: var(--header-height);
  }

  .tutorials-hero {
    padding: 6rem 0 4rem;
    text-align: center;
  }

  .tutorials-hero h1 {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .tutorials-section {
    padding: 4rem 0 6rem;
  }

  @media (max-width: 768px) {
    .tutorials-hero h1 {
      font-size: 2.5rem;
    }
  }
</style>
